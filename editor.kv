#:kivy 1.1.0

<LoadDialog>:
    BoxLayout:
        size: RegistrationPage.size
        pos: RegistrationPage.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: RegistrationPage.cancel()

            Button:
                text: "Load"
                on_release: RegistrationPage.load(filechooser.path, filechooser.selection)
